#!/usr/bin/groovy
@Library('test-shared-library') _

node('docker && !mr-0xc8') {

    // Clean workspace
    sh 'rm -rf *'
    // Get Sparkling Water and save the scm environment variables
    checkout scm

    stage("Build Docker Images for Hadoop Smoke tests"){
        versions = ["cdh-5.4","cdh-5.5","cdh-5.6", "cdh-5.7", "cdh-5.8", "cdh-5.10", "cdh-5.13", "cdh-5.14",
                    "hdp-2.2", "hdp-2.3", "hdp-2.4", "hdp-2.5", "hdp-2.6"]

        versions.each { version ->
            sh  """
                docker pull docker.h2o.ai/opsh2oai/h2o-3-hadoop-$version:47
                cd jenkins
                docker build -t docker.h2o.ai/opsh2oai/sparkling-water-hadoop-${version}:${BUILD_NUMBER} -f Dockerfile-${version} .
                """
        }
    }

    stage("Publish Docker Images for Hadoop Smoke tests"){
        versions = ["cdh-5.4","cdh-5.5","cdh-5.6", "cdh-5.7", "cdh-5.8", "cdh-5.10", "cdh-5.13", "cdh-5.14",
                    "hdp-2.2", "hdp-2.3", "hdp-2.4", "hdp-2.5", "hdp-2.6"]

        versions.each { version ->
            sh  """
                docker push docker.h2o.ai/opsh2oai/sparkling-water-hadoop-${version}:${BUILD_NUMBER}
                """
        }
    }


}
