#!/usr/bin/groovy
@Library('test-shared-library') _

properties(
        [
                pipelineTriggers([cron('H 16 * * *')]),
                buildDiscarder(logRotator(numToKeepStr: '10'))
        ]
)

def pipeline
def sparkVersions
def commonsLib
node("docker") {
    try {
        cleanWs()
        checkout scm
        pipeline = load 'ci/sparklingWaterPipeline.groovy'
        commons = load 'ci/commons.groovy'
        sparkVersions = commons.getSupportedSparkVersions()
    } finally {
        cleanWs()
    }
}

pipeline(params) { p ->
    commons = commonsLib
    sparkMajorVersions = sparkVersions
    runUnitTests = "false"
    runPyUnitTests = "false"
    runRUnitTests = "false"
    runIntegTests = "false"
    runPyIntegTests = "false"
    buildAgainstH2OBranch = "true"
    h2oBranch = "master"
    hadoopVersion = "2.7"
    backendMode = "both"
    driverHadoopVersion = "hdp2.2"
    uploadNightly = "true"
}
