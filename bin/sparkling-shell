#!/usr/bin/env bash

# Top-level directory for this product
TOPDIR=$(cd `dirname $0`/..; pwd)
source $TOPDIR/bin/sparkling-env.sh
# Verify there is Spark installation
checkSparkHome

# Default memory for shell
DRIVER_MEMORY=3G
DRIVER_MEMORY=${DRIVER_MEMORY:-2G}
# Default MASTER
MASTER=${MASTER:-"local-cluster[3,2,2048]"}
export MASTER

banner

(
 cd $TOPDIR
 $SPARK_HOME/bin/spark-shell --jars $TOPDIR/assembly/build/libs/$FAT_JAR --driver-class-path $TOPDIR/assembly/build/libs/$FAT_JAR --driver-memory $DRIVER_MEMORY --conf spark.driver.extraJavaOptions="-XX:MaxPermSize=384m" "$@"
)
